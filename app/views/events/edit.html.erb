<div class="row" >
  <div class="col-md-7 col-md-offset-2 col-sm-8 col-sm-offset-1 col-xs-12 " style= "text-align:left" >

  <!--<% if @event.usrid == current_user.id %>
     <%= link_to 'Delete Event', @event, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>-->

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    Discussion topic:
    <%= f.text_field :name, :size => 80 %><p>
  </div>
  <div class="field">
    Start time (in Pacific Daylight Time zone)...
    <%= f.datetime_select :start_at, ampm: true, default: 3.days.from_now, minute_step: 15, start_year: Date.today.year, end_year: Date.today.year + 2 %>
  </div>
  <div class="field">
    End time (in PDT)....
    <%= f.datetime_select :end_at, ampm: true, default: 3.days.from_now, minute_step: 15, start_year: Date.today.year, end_year: Date.today.year + 2 %>
  </div>
  <div class="field">
    Details about the livestream discussion<br /> 
    <%= f.text_area :desc, :cols => 82, :rows => 9 %><p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% end %>

</div>
</div>